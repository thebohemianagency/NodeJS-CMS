<script src="./../scripts/engine/bodyCreate.js"></script>
<script src="./../scripts/engine/errorHandling.js"></script>
<script src="./../scripts/engine/adminTemplates.js"></script>
<script src="./../scripts/engine/display.js"></script>
<script src="./../scripts/engine/pagination.js"></script>

<script>
    var reset = function () {
        document.getElementById("create-subscribers-display").innerHTML = "";
        document.getElementById("subscribers-display").innerHTML = "";
        document.getElementById("upload-files-display").innerHTML = "";
        document.getElementById("files-display").innerHTML = "";
        document.getElementById("products-display").innerHTML = "";
        document.getElementById("single-products-display").innerHTML = "";
        document.getElementById("products-paginate").innerHTML = "";
        document.getElementById("reviews-paginate").innerHTML = "";
        document.getElementById("reviews-display").innerHTML = "";
        document.getElementById("blog-display").innerHTML = "";
        document.getElementById("blog-paginate").innerHTML = "";
        document.getElementById("update-blog-display").innerHTML = "";
        document.getElementById("create-blog-display").innerHTML = "";
        document.getElementById("comments-display").innerHTML = "";
        document.getElementById("comments-paginate").innerHTML = "";
        display('file-upload', false)
    }
</script>