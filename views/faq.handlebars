<style>
    @import url('https://fonts.googleapis.com/css?family=Hind:300,400');



    .faq-image {
        width: 100%;
        height: 50vh;
        background-image: url('img/header3.jpg');
        background-position: center;
        background-size: cover;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .faq-image h1 {
        font-family: 'Raleway';
        font-size: 6vh;
        text-align: center;
        color: rgb(255, 255, 255);
        font-weight: 500;
    }

    .container-faq {
        font-family: 'Hind', sans-serif;
        display: flex;
        flex-direction: row;
        padding: 2vh;
        width: auto;
        color: #4d5974;
    }



    .accordion a {
        position: relative;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
        -ms-flex-direction: column;
        flex-direction: column;
        width: 90%;
        padding: 1vh 3vh 1vh 1vh;
        color: #7288a2;
        font-size: 2.2vh;
        font-weight: 400;
        border-bottom: 1px solid #e5e5e5;
    }

    .accordion a:hover,
    .accordion a:hover::after {
        cursor: pointer;
        color: #03b5d2;
    }

    .accordion a:hover::after {}

    .accordion a.active {
        color: #03b5d2;
        border-bottom: 1px solid #03b5d2;
    }

    .accordion a::after {
        font-family: 'Ionicons';
        content: '+';
        position: absolute;
        float: right;
        right: 1rem;
        font-size: 2.3vh;
        color: #7288a2;
        padding: 5px;
        width: 3vh;
        height: 3vh;
        text-align: center;
    }

    .accordion a.active::after {
        font-family: 'Ionicons';
        content: '-';
        color: #03b5d2;

    }

    .accordion .content {
        text-align: center;
        width: 90%;
        opacity: 0;
        padding: 0 1rem;
        max-height: 0;
        border-bottom: 1px solid #e5e5e5;
        overflow: hidden;
        clear: both;
        -webkit-transition: all 0.2s ease 0.15s;
        -o-transition: all 0.2s ease 0.15s;
        transition: all 0.2s ease 0.15s;
    }

    .accordion .content p {
        text-align: center;
        font-size: 2vh;
        font-weight: 300;
    }

    .accordion .content.active {
        opacity: 1;
        padding: 1rem;
        max-height: 100%;
        -webkit-transition: all 0.35s ease 0.15s;
        -o-transition: all 0.35s ease 0.15s;
        transition: all 0.35s ease 0.15s;
    }

    @media(orientation:portrait) {
        .container-faq {
            flex-direction: column;
        }
    }
</style>

<div class="faq-image">
